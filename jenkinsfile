pipeline {
    agent any 

    tools {
        maven 'maven'
        terraform 'terraform'
    }


    stages {
        stage('cleanup workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/sunnygeddam7/awstask.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }


        stage('terraformm') {
            steps {
                withCredentials([aws(accessKeyVariable: 'AWS_ACCESS_KEY_ID', credentialsId: 'aws_creds', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    script {
                        sh 'terraform init'
                        sh 'terraform apply -auto-approve'
                        env.EC2_IP = sh(script: "/bin/bash -c 'terraform output -raw public_ip'", returnStdout: true).trim()
                        echo "EC2 Public IP: ${env.EC2_IP}"
                    }
                }
            }
        }
        stage('app_deploy') {
            steps {
                sshagent(['target_key']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@$EC2_IP << 'EOF'
                    docker --version
                    sudo docker pull itssunnyy/tomcat:latest
                    sudo docker run -d itssunnyy/tomcat:latest
                    """
                }
            }

        }
    }
}

